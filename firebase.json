{
  "functions": {
    "source": "dist",
    "predeploy": [
      "npm run build && npm run prep-api"
    ]
  },
  "hosting": [
    {
      "target": "staging",
      "public": "dist/public",
      "predeploy": [
        "npm run prep-public"
      ],
      "rewrites": [
        {
          "source": "api/v1/**",
          "function": "api"
        }
      ]
    },
    {
      "target": "production",
      "public": "dist/public",
      "predeploy": [
        "npm run prep-public"
      ],
      "rewrites": [
        {
          "source": "api/v1/**",
          "function": "api"
        }
      ]
    }
  ]
}