{
  "functions": {
    "source": "lib",
    "predeploy": [
      "npm run build && cp lib.package.json lib/package.json && cp env/.env.production lib/.env"
    ]
  },
  "hosting": [
    {
      "target": "staging",
      "public": "lib/public",
      "predeploy": [
        "npm run build"
      ],
      "rewrites": [
        {
          "source": "api/**",
          "function": "api"
        }
      ]
    },
    {
      "target": "production",
      "public": "lib/public",
      "predeploy": [
        "npm run build"
      ],
      "rewrites": [
        {
          "source": "api/**",
          "function": "api"
        }
      ]
    }
  ]
}